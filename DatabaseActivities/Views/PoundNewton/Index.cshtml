@model IEnumerable<DatabaseActivities.Models.Entity.PoundNewton>

@{
    ViewBag.Title = "Index";
}
<div class="containerUC">
    <p class="head">
        MyConversion
    </p>
    <p class="inspiration">
        Changing the world by letting people convert units one conversion at a time.
    </p>
    <table class="menu" align="center">
        <tr>
            <th><a href="">Feet - Meters</a></th>
            <th><a href="">Fahrenheit - Celsius</a></th>
            <th><a href="/MileFathom/Index">Miles - Fathoms</a></th>
            <th><a href="/PoundNewton/Index">Pounds - Newtons</a></th>
        </tr>
    </table>
    <div class="info">
        <p id="lightbulbtext">Our converting capabilities are unparalleled, synthesizing aesthetic design with fast results.</p>
        <img id="lightpic" src="/content/images/lightbulb.png" width="20" />
        <p id="hearttext">90% of our users leave feeling satisfied with their conversion experience.</p>
        <img id="heartpic" src="/content/images/heart.png" width="30" />
        <p id="persontext">Talk with a representative now: 555-555-5555</p>
        <img id="personpic" src="/content/images/face icon.png" width="30" />
    </div>
    <div id="conversion">
        <p class="unit1head">Pound</p>
        <p class="unit2head">Newton</p>
        <form action="~/PoundNewton/PoundToNewton" method="post">
            <input id="unit1" name="pound" type="number" placeholder="0" value="0" step="any"/>
            <input id="unit1submit" name="poundSubmit" type="submit" />
        </form>
        <form action="~/PoundNewton/NewtonToPound" method="post">
            <input id="unit2" name="newton" type="number" placeholder="0" value="0" step="any" />
            <input id="unit2submit" name="newtonSubmit" type="submit" />
        </form>
    </div>
    <text class="final">
        @foreach (var item in Model)
        {
            <div>
                @item.Pound pounds is @item.Newton newtons.
            </div>
            <form action="~/PoundNewton/Delete" method="post">
                <input name="id" value="@item.Id" hidden />
                <input id="deleted" type="submit" value="Delete" />
            </form>
            <br />
            <br />
        }
    </text>

</div>
<h2>Index</h2>

